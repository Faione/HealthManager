<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black0"
        android:textSize="15dp"
        android:text="你的出生日期是？"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center_horizontal"
        android:textColor="@color/black1"
        android:text="不同年龄身体状况不同，请如实填写 "/>

    <DatePicker
        android:id="@+id/dp_dickdate"
        android:layout_gravity="center_horizontal"
        android:firstDayOfWeek="2"
        android:maxDate="01/01/1950"
        android:minDate="01/01/2025"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black0"
        android:textSize="15dp"
        android:text="你今天的体重是？"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center_horizontal"
        android:textColor="@color/black1"
        android:text="体重只有自己知道，请放心填写 "/>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <cn.edu.swufe.healthmanager.util.slidingruleview.SlidingRuleView_Kg
            android:id="@+id/slidView_kg_getbasedata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </LinearLayout>
    <Button
        android:id="@+id/button_getbasedata_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_drawable_blue"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:gravity="center"
        android:text="    下一步    "
        />

</LinearLayout>