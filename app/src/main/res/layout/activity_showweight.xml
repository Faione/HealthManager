<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.hjq.bar.TitleBar
        android:id="@+id/TitleBar_showweight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#65c8b3"
        app:title="体重记录"
        app:titleStyle="bold"
        app:titleColor="@color/white"/>

    <cn.edu.swufe.healthmanager.util.echartview.EchartView
        android:id="@+id/linechart_showweight"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/TitleBar_showweight"
        android:layout_width="400dp"
        android:layout_height="300dp">

    </cn.edu.swufe.healthmanager.util.echartview.EchartView>
    <View
        android:layout_below="@+id/linechart_showweight"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_gravity="center"
        android:background="@color/gray5"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_below="@+id/linechart_showweight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_startweight"
                        android:textColor="@color/black0"
                        android:textSize="20dp"
                        android:text="74.5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="@color/black0"
                        android:text="公斤"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <TextView
                    android:layout_marginTop="10dp"
                    android:text="初始体重"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:text="开始减重"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_start_jz"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:text="2021年3月01日"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_newweight"
                        android:textColor="@color/black0"
                        android:textSize="20dp"
                        android:text="72.5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="@color/black0"
                        android:text="公斤"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <TextView
                    android:layout_marginTop="10dp"
                    android:text="初始体重"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:text="开始减重"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_new_jz"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:text="2021年3月17日"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:background="#16DCAE39"
            android:paddingTop="8dp"
            android:paddingLeft="28dp"
            android:paddingRight="28dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_aimweight"
                        android:textColor="@color/black0"
                        android:textSize="20dp"
                        android:text="63.5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="@color/black0"
                        android:text="公斤"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <TextView
                    android:layout_marginTop="10dp"
                    android:text="目标体重"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:text="目标日期"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_aim_jz"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:text="2021年3月01日"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



</RelativeLayout>