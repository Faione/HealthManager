<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/report_repeat_bg">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="18dp"
            android:paddingTop="60dp"
            android:paddingBottom="10dp"
            android:text="我的体重"
            android:textSize="18dp"
            android:textColor="@color/white"/>

        <cn.edu.swufe.healthmanager.util.BMIView
            android:id="@+id/report_BMIView1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginEnd="@dimen/activity_margin"
            android:layout_marginStart="@dimen/activity_margin"
            android:layout_marginTop="8dp"
            android:background="@drawable/bmi_bg"
            app:rightColor="@color/gray"
            app:title="最新体重"
            app:currentVal="370"
            app:titleSize="8sp"
            app:normalTextColor="@color/main"
            app:normalText="正常"
            app:normalTextSize="16sp"/>

        <cn.edu.swufe.healthmanager.util.BMIView
            android:id="@+id/report_BMIView2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginEnd="@dimen/activity_margin"
            android:layout_marginStart="@dimen/activity_margin"
            android:layout_marginTop="8dp"
            android:background="@drawable/bmi_bg_top"
            app:rightColor="@color/gray"
            app:title="最新BMI"
            app:currentVal="370"
            app:titleSize="8sp"
            app:normalTextColor="@color/main"
            app:normalText="正常"
            app:normalTextSize="16sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dash_line_circle_diameter"
            android:layout_marginEnd="@dimen/activity_margin"
            android:layout_marginStart="@dimen/activity_margin"
            android:background="@drawable/dash_line" />
        <TextView
            android:id="@+id/report_text_bmi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="@dimen/activity_margin"
            android:layout_marginStart="@dimen/activity_margin"
            android:textSize="14sp"
            android:text="测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试"
            android:background="@drawable/bmi_bg_bottom"
            android:padding="16dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="18dp"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:textSize="18dp"
            android:text="我的目标"
            android:textColor="@color/black0"/>
        <cn.edu.swufe.healthmanager.util.BMIView
            android:id="@+id/report_BMIView3"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginEnd="@dimen/activity_margin"
            android:layout_marginStart="@dimen/activity_margin"
            android:layout_marginTop="8dp"
            android:background="@drawable/bmi_bg"
            app:rightColor="@color/gray"
            app:title="目标体重"
            app:currentVal="370"
            app:titleSize="8sp"
            app:normalTextColor="@color/green"
            app:normalText="normal"
            app:normalTextSize="16sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="18dp"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:textSize="18dp"
            android:text="关键问题"
            android:textColor="@color/black0"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/report_bmi"
                android:paddingLeft="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10sp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/report_bmi"/>
                <TextView
                    android:id="@+id/report_bmi_text"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="BMI24.0"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/report_weight"
                android:paddingLeft="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10sp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/report_right"/>
                <TextView
                    android:id="@+id/report_weight_text"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="超重"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/report_risk"
                android:paddingLeft="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10sp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/report_risk"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="健康风险增加"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/report_health"
                android:paddingLeft="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10sp">
                <ImageView

                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/report_right"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="健康的身体，继续保持吧~"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="18dp"
                android:textSize="18dp"
                android:text="饮食方案"
                android:gravity="center_vertical"
                android:textColor="@color/black0"/>

            <TextView
                android:id="@+id/report_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="查看详细方案"
                android:layout_gravity="center"
                android:gravity="right"
                android:drawableRight="@drawable/arrow_forward"
                android:textColor="@color/black1"/>


        </LinearLayout>

        <LinearLayout
            android:padding="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@drawable/bmi_bg">
            <cn.edu.swufe.healthmanager.util.RingView
                android:id="@+id/report_RingView"
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="Hello World!"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <LinearLayout
                android:paddingLeft="20dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_gravity="center"
                        android:background="@drawable/report_sekuai_tanshui"
                        android:layout_width="12dp"
                        android:layout_height="12dp" />
                    <TextView
                        android:paddingLeft="10dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:textColor="@color/black0"
                        android:text="碳水化合物"/>
                    <TextView
                        android:id="@+id/report_ts"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="60%   120g"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_gravity="center"
                        android:background="@drawable/report_sekuai_dbz"
                        android:layout_width="12dp"
                        android:layout_height="12dp" />
                    <TextView
                        android:paddingLeft="10dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:textColor="@color/black0"
                        android:text="蛋白质"/>
                    <TextView
                        android:id="@+id/report_dbz"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="25%   50g"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_gravity="center"
                        android:background="@drawable/report_sekuai_zhifang"
                        android:layout_width="12dp"
                        android:layout_height="12dp" />
                    <TextView

                        android:paddingLeft="10dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:textColor="@color/black0"
                        android:text="脂肪"/>
                    <TextView
                        android:id="@+id/report_zf"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="15%   30g"/>
                </LinearLayout>



            </LinearLayout>

            <View
                android:layout_width="1dip"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@color/black1"
                android:gravity="center"

                />
            <LinearLayout
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/report_bmr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/black0"
                    android:text="1600"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:text="千卡"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="160dp">
            <Button
                android:id="@+id/button_healthreport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/button_drawable_blue"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:gravity="center"
                android:text="    进入首页    "
                />
        </LinearLayout>

    </LinearLayout>
</ScrollView>